      <HintPath>C:\Program Files (x86)\Steam\steamapps\common\Tales of the Neon Sea\TalesOfTheNeonSea_Data\Managed\Assembly-CSharp.dll</HintPath>
    </Reference>
  </ItemGroup>
  
